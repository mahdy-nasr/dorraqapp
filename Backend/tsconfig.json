{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "Node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": "src",
    "strictNullChecks": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}